@inject IJSRuntime JS
@code {

	//Preview
	private bool isChecked = false;
	private string url = "";
	private string urlPrefix = "https://";

	private bool IsValidUrl()
	{
		if (string.IsNullOrWhiteSpace(url))
			return false;

		string fullUrl = urlPrefix + url;
		string pattern = @"^(https?:\/\/)?([a-zA-Z0-9-]+\.)+[a-zA-Z]{2,}(:[0-9]{1,5})?(\/.*)?$";

		return System.Text.RegularExpressions.Regex.IsMatch(fullUrl, pattern);
	}


	//Logs
	private HashSet<string> links = new HashSet<string>();
	private bool isScraping = false;

	private async Task StartScraping()
	{
		if (!IsValidUrl()) return;

		isScraping = true;
		links.Clear(); // Clear previous results

		try
		{
			var result = await WebScraperService.ExploreSiteAsync(url);
			links = result;
		}
		catch (Exception ex)
		{
			Console.WriteLine($"Erreur lors du scraping : {ex.Message}");
		}

		isScraping = false;
	}
}